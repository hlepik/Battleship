@page
@model WebApp.Pages.Answer.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Answers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Answers!.Answer" class="control-label"></label>
                <input asp-for="Answers!.Answer" class="form-control" />
                <span asp-validation-for="Answers!.Answer" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Answers!.IsAnswerCorrect" /> @Html.DisplayNameFor(model => model.Answers!.IsAnswerCorrect)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Answers!.QuestionId" class="control-label">Question</label>
                <select asp-for="Answers!.QuestionId" class ="form-control" asp-items="Model.SelectList"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
