@page
@model WebApp.Pages.Answer.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Answers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Answers!.AnswersId" />
            <div class="form-group">
                <label asp-for="Answers!.Answer" class="control-label"></label>
                <input asp-for="Answers!.Answer" class="form-control" />
                <span asp-validation-for="Answers!.Answer" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Answers!.IsAnswerCorrect" /> @Html.DisplayNameFor(model => model.Answers!.IsAnswerCorrect)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Answers!.QuestionId" class="control-label"></label>
                <select asp-for="Answers!.QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                <span asp-validation-for="Answers!.QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
