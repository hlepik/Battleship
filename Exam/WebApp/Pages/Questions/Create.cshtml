@page
@model WebApp.Pages.Questions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question!.Questions" class="control-label"></label>
                <input asp-for="Question!.Questions" class="form-control" />
                <span asp-validation-for="Question!.Questions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question!.QuizId" class="control-label">Quiz name</label>
                <select asp-for="Question!.QuizId" class ="form-control" asp-items="Model.TitleSelectList"></select>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question!.IsHavingAnswer" />
                    Does question has an answer?
                    </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />

            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
