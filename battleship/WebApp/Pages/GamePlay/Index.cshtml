
@page
@using GameBrain
@using Domain
@using System.Collections
@model WebApp.Pages.GamePlay.Index

@{var player = "";}
@if(Model.BattleShip.NextMoveByX )
{
    player = Model.BattleShip.Player1;
}
else
{
    player = Model.BattleShip.Player2;
}

<h2>@player turn </h2>

