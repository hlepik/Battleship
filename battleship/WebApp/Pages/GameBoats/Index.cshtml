@page
@model WebApp.Pages.GameBoats.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameBoat[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameBoat[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameBoat[0].LifeCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameBoat[0].Direction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameBoat[0].ShipId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameBoat[0].IsSunken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameBoat[0].Player)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GameBoat) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LifeCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSunken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GameBoatId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GameBoatId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GameBoatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
